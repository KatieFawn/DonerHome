<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addresses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.home.profile.ProfileActivity">

    <!-- Line View -->
    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C8C3C3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.9"/>

    <!-- Home Button -->
    <ImageButton
        android:id="@+id/home_button"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/deals_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <!-- Deals Button -->
    <ImageButton
        android:id="@+id/deals_button"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_button"
        app:layout_constraintEnd_toStartOf="@id/cart_button" />


    <!-- Cart Button -->
    <ImageButton
        android:id="@+id/cart_button"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/deals_button"
        app:layout_constraintEnd_toStartOf="@id/profile_button" />

    <!-- Profile Button -->
    <ImageButton
        android:id="@+id/profile_button"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cart_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Addresses view  -->

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Addresses"
        android:layout_marginTop="50dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        app:layout_constraintVertical_bias="0.2"/>

    <!-- Add Address Button -->
    <ImageButton
        android:id="@+id/add_address"
        android:layout_width="133dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />


    <!-- Address #1 Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <!-- Address #1 Frame -->
        <FrameLayout
            android:id="@+id/address1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <!-- Remove Address Button -->
        <ImageButton
            android:id="@+id/remove_button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|center_vertical"/>

        <!-- Name Text for Address -->
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="start|center_vertical"
            android:text="null"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>

    <!-- Address #2 Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- Address Button -->
        <ImageButton
            android:id="@+id/address2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <!-- Remove Address Button -->
        <ImageButton
            android:id="@+id/remove_button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|center_vertical"/>

        <!-- Name Text for Address -->
        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="start|center_vertical"
            android:text="null"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>

    <!-- Address #3 Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Address Button -->
        <ImageButton
            android:id="@+id/address3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <!-- Remove Address Button -->
        <ImageButton
            android:id="@+id/remove_button3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|center_vertical"/>

        <!-- Name Text for Address -->
        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="start|center_vertical"
            android:text="null"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>


    <!-- Address #4 Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- Address Button -->
        <ImageButton
            android:id="@+id/address4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <!-- Remove Address Button -->
        <ImageButton
            android:id="@+id/remove_button4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|center_vertical"/>

        <!-- Name Text for Address -->
        <TextView
            android:id="@+id/name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="start|center_vertical"
            android:text="null"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>

    <!-- Address #5 Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <!-- Address Button -->
        <ImageButton
            android:id="@+id/address5"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>

        <!-- Remove Address Button -->
        <ImageButton
            android:id="@+id/remove_button5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:layout_gravity="end|center_vertical"/>

        <!-- Name Text for Address -->
        <TextView
            android:id="@+id/name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="start|center_vertical"
            android:text="null"
            android:textColor="#000000"
            android:textSize="26sp" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>